# Frontend environment variables for the Physical AI Humanoid Book Platform
# These will be used to configure API endpoints and other frontend settings

# Backend API URL
REACT_APP_API_BASE_URL=http://localhost:8000
API_BASE_URL=http://localhost:8000

# Google Analytics or other tracking IDs (if applicable)
GA_TRACKING_ID=

# Other frontend configuration
SITE_URL=http://localhost:3000

# Additional configuration for Docusaurus
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# AI Service API Keys (if needed on frontend - be cautious with security)
NEXT_PUBLIC_GEMINI_API_KEY=your-gemini-api-key
NEXT_PUBLIC_OPENAI_API_KEY=your-openai-api-key
NEXT_PUBLIC_ANTHROPIC_API_KEY=your-anthropic-api-key
NEXT_PUBLIC_COHERE_API_KEY=your-cohere-api-key
NEXT_PUBLIC_HF_TOKEN=your-hugging-face-token

# Feature flags
NEXT_PUBLIC_ENABLE_TRANSLATION=true
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_AUTH=true
NEXT_PUBLIC_SUPPORTED_LANGUAGES=en,ur

# Frontend Configuration
NEXT_PUBLIC_APP_TITLE="Physical AI & Humanoid Robotics"
NEXT_PUBLIC_APP_DESCRIPTION="An AI/Spec-Driven Technical Publication"
NEXT_PUBLIC_DEFAULT_LANGUAGE=en

# Frontend Theme Configuration
NEXT_PUBLIC_THEME_COLOR_PRIMARY=#123456
NEXT_PUBLIC_THEME_COLOR_SECONDARY=#789012
NEXT_PUBLIC_ROBOTIC_THEME=true
NEXT_PUBLIC_DARK_MODE=true

# Third-party integrations
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_HOTJAR_ID=
NEXT_PUBLIC_SEGMENT_WRITE_KEY=

# Frontend-specific API settings
NEXT_PUBLIC_CHATBOT_TIMEOUT=30000
NEXT_PUBLIC_API_REQUEST_TIMEOUT=30000

# Frontend feature toggles
NEXT_PUBLIC_SHOW_CHATBOT_BUTTON=true
NEXT_PUBLIC_SHOW_LOGIN_HEADER=true
NEXT_PUBLIC_SHOW_SIGNUP_HEADER=true
NEXT_PUBLIC_ENABLE_PDF_DOWNLOAD=true
NEXT_PUBLIC_ENABLE_PRINT=true

# External service configurations
NEXT_PUBLIC_QWEN_API_KEY=your-qwen-api-key
NEXT_PUBLIC_EMBEDDINGS_API_KEY=your-embeddings-api-key
NEXT_PUBLIC_TRANSLATION_API_KEY=your-translation-api-key

# Frontend-only services (like analytics, monitoring, etc.)
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_POSTHOG_API_KEY=
NEXT_PUBLIC_CRISP_WEBSITE_ID=